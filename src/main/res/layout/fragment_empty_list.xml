    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_empty_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmptyListFragment">

    <TextView
        android:id="@+id/fragment_empty_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sixteenDp"
        android:text="@string/empty_list_warning"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/twentyFourSP"
        android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>